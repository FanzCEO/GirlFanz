{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"],
      "@/*": ["client/src/*"],
      "@assets/*": ["attached_assets/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}